<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityTransitions</item>
    </style>

    <style name="ActivityTransitions" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/right_to_left</item>
        <item name="android:activityOpenExitAnimation">@anim/idle</item>
        <item name="android:activityCloseEnterAnimation">@anim/idle</item>
        <item name="android:activityCloseExitAnimation">@anim/left_to_right</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance">
        <item name="android:textSize">@dimen/font_huge_36</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance">
        <item name="android:textSize">@dimen/font_large_20</item>
    </style>

    <style name="TextAppearance.Text" parent="TextAppearance">
        <item name="android:textSize">@dimen/font_medium_16</item>
    </style>

    <style name="TextAppearance.EditText" parent="TextAppearance">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/font_large_20</item>
    </style>

    <style name="Buttons" parent="Widget.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Buttons.Large" parent="Buttons">
        <item name="android:textSize">@dimen/font_large_20</item>
    </style>

    <style name="Buttons.Medium" parent="Buttons">
        <item name="android:textSize">@dimen/font_medium_16</item>
    </style>

    <style name="SkipButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_medium_16</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

</resources>
